daemon off;

http {
  gzip on;
  gzip_comp_level 2;
  gzip_min_length 512;
  
  server_tokens off;

  access_log /dev/stdout main;
  error_log /dev/stdout notice;
  log_not_found on;
  include mime.types;
  
  default_type application/octet-stream;
  sendfile on;
  
  server {
    listen $PORT;
  
    port_in_redirect off;
  
    location / {
	    root /app/frontend/dist/studifront;
    }

    location /api {
      proxy_pass https://studigarage-e3153807165e.herokuapp.com/;
    }
  }
}